<header class="bg-blue-500 text-white">
  <div class="flex justify-between items-center p-4">
    <div class="text-2xl font-bold">
      <%= link_to "Library Manager", root_path %>
    </div>
    <nav class="space-x-4 flex">
      <% if user_signed_in? %>
        <a href="/dashboard" class="hover:text-gray-200">Dashboard</a>
        <%= button_to 'Logout', destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to "Log in", new_user_session_path, class: "hover:text-gray-200" %>
        <%= link_to "Sign up", new_user_registration_path, class: "hover:text-gray-200" %>
      <% end %>
    </nav>
  </div>
</header>