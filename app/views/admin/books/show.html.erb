<div class="container mx-auto p-4">
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="p-6">
      <h1 class="text-3xl font-bold mb-4"><%= @book.title %></h1>
      <p class="text-gray-700 mb-2"><strong>Author:</strong> <%= @book.author %></p>
      <p class="text-gray-700 mb-2"><strong>Genre:</strong> <%= @book.genre %></p>
      <p class="text-gray-700 mb-2"><strong>ISBN:</strong> <%= @book.isbn %></p>
      <p class="text-gray-700 mb-2"><strong>Total Copies:</strong> <%= @book.total_copies %></p>
      <div class="mt-4">
        <%= link_to 'Edit', edit_admin_book_path(@book), class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to 'Back', admin_books_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded ml-2" %>
      </div>
    </div>
  </div>
</div>