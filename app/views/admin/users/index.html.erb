<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-4">Admin User Management</h1>
  <%= link_to 'New User', new_admin_user_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block" %>
  <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
    <thead>
    <tr>
      <th class="py-2 px-4 bg-gray-200 text-left text-gray-600 font-bold">Name</th>
      <th class="py-2 px-4 bg-gray-200 text-left text-gray-600 font-bold">Email</th>
      <th class="py-2 px-4 bg-gray-200 text-left text-gray-600 font-bold">Role</th>
      <th class="py-2 px-4 bg-gray-200 text-left text-gray-600 font-bold">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr class="border-b">
        <td class="py-2 px-4"><%= user.name %></td>
        <td class="py-2 px-4"><%= user.email %></td>
        <td class="py-2 px-4"><%= user.role %></td>
        <td class="py-2 px-4">
          <%= link_to 'Show', admin_user_path(user), class: "text-blue-500 hover:text-blue-700" %>
          <%= link_to 'Edit', edit_admin_user_path(user), class: "text-yellow-500 hover:text-yellow-700 ml-2" %>
          <%= link_to 'Destroy', admin_user_path(user), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "text-red-500 hover:text-red-700 ml-2" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>